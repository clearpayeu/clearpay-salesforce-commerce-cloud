<?xml version="1.0" encoding="UTF-8"?>
<preferences xmlns="http://www.demandware.com/xml/impex/preferences/2007-03-31">
    <custom-preferences>
        <all-instances>
            <preference preference-id="cpBrandSettings">{
                "GB": {
                    "brand": "clearpay",
                    "service": "clearpay.service.GB.v2"
                }
            }</preference>
            <preference preference-id="cpDisplayPdpInfo">true</preference>
            <preference preference-id="cpDisplayPlpInfo">false</preference>
            <preference preference-id="cpDisplayCartInfo">true</preference>
            <preference preference-id="cpPaymentMode">DIRECT_CAPTURE</preference>
            <preference preference-id="enableClearpay">false</preference>
            <preference preference-id="cpEnableExpressCheckout">true</preference>
            <preference preference-id="cpExpressCheckoutShippingStrategy">integrated</preference>
            <preference preference-id="cpEnableExpressCheckoutBuyNow">true</preference>
            <preference preference-id="cpStorePickupDescription">Available for next-day pickup</preference>
            <preference preference-id="cpEnableExpressCheckoutPdp">false</preference>
            <preference preference-id="cpEnableExpressCheckoutCart">true</preference>
        </all-instances>
        <development>
            <preference preference-id="cpJavaScript">https://js-sandbox.squarecdn.com/square-marketplace.js</preference>
        </development>
        <staging>
            <preference preference-id="cpJavaScript">https://js-sandbox.squarecdn.com/square-marketplace.js</preference>
        </staging>
        <production>
            <preference preference-id="cpJavaScript">https://js.squarecdn.com/square-marketplace.js</preference>
        </production>
    </custom-preferences>
</preferences>

<isif condition="${pdict.applyCaching}">
    <iscache type="relative" hour="24" />
</isif>

<isscript>
    var sitePreferences = require("*/cartridge/scripts/util/clearpayUtilities").sitePreferencesUtilities;
    var ClearpaySession = require('*/cartridge/scripts/util/clearpaySession');

    var isExpressCheckoutFinalize = ClearpaySession.isExpressCheckoutFinalizeFlow();
    var clearpayExpressCheckoutEnabled = sitePreferences.isExpressCheckoutEnabled();
</isscript>

<isif condition="${pdict.totalprice}">
    <isif condition="${pdict.classname == 'checkout-clearpay-message'}">
        <div class="product-clearpay-message ${pdict.classname}">
            <span title="${Resource.msg('terms.conditions.label', pdict.clearpaybrand, null)}">
                <isif condition="${clearpayExpressCheckoutEnabled && isExpressCheckoutFinalize}">
                    <isinclude template="product/components/clearpaywidget" />
                    <div id="clearpay-widget-container"></div>
                    <script>
                        createClearpayWidget();
                    </script>
                <iselse>
                    <div>${Resource.msg('checkout.content.redirect.label', pdict.clearpaybrand, null)}</div>
                    <hr>
                    <afterpay-placement 
                        data-is-eligible="true" 
                        data-locale="${request.getLocale()}"
                        data-badge-theme="black-on-mint" 
                        data-amount="${pdict.totalprice}"
                        data-modal-link-style="circled-info-icon"
                        data-intro-text="${Resource.msg('checkout.content.intro.text', pdict.clearpaybrand, null)}">
                    </afterpay-placement>
                    <afterpay-placement 
                        data-type="price-table" 
                        data-amount="${pdict.totalprice}"
                        data-currency="${session.currency.getCurrencyCode()}" 
                        data-locale="${request.getLocale()}">
                    </afterpay-placement>
                </isif>
                <br>
                <div>
                    <a target="_blank" rel="noreferrer noopener"
                        href="${require('*/cartridge/scripts/util/clearpayUtilities').brandUtilities.getBrandSettings()['learnMoreUrl']}">
                        ${Resource.msg('terms.conditions.label', pdict.clearpaybrand, null)}
                    </a>
                </div>
            </span>
        </div>
    <iselse/>
        <afterpay-placement 
            data-is-eligible="${pdict.eligible}" 
            data-locale="${request.getLocale()}"
            data-badge-theme="black-on-mint" 
            data-amount="${pdict.totalprice}"
            data-modal-link-style="circled-info-icon">
        </afterpay-placement>
    </isif>
</isif>
